{
  "comment": "Add this to ~/.clawdbot/clawdbot.json to configure the telegram-usage skill",
  "channels": {
    "telegram": {
      "enabled": true,
      "botToken": "YOUR_BOT_TOKEN_HERE",
      "customCommands": [
        {
          "command": "usage",
          "description": "Show session usage stats"
        },
        {
          "command": "stats",
          "description": "Display quota and token usage"
        }
      ]
    }
  },
  "skills": {
    "entries": {
      "telegram-usage": {
        "enabled": true
      }
    }
  },
  "session": {
    "reset": {
      "mode": "daily",
      "atHour": 4,
      "idleMinutes": null
    }
  }
}
