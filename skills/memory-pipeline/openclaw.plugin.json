{
  "id": "memory-pipeline",
  "name": "Memory Pipeline + Performance Routine",
  "description": "Complete agent memory system: fact extraction, knowledge graph, daily briefings, pre-game routine hooks, tool discipline, and after-action review.",
  "kind": "memory",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": { "type": "boolean", "default": true },
      "briefing": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "maxChars": { "type": "number", "default": 6000 },
          "checklist": {
            "type": "array",
            "items": { "type": "string" },
            "default": [
              "Restate the task in one sentence.",
              "List constraints and success criteria.",
              "Retrieve only the minimum relevant memory.",
              "Prefer tools over guessing when facts matter."
            ]
          },
          "memoryFiles": {
            "type": "array",
            "items": { "type": "string" },
            "default": ["memory/IDENTITY.md", "memory/PROJECTS.md"]
          }
        },
        "default": {}
      },
      "tools": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "deny": { "type": "array", "items": { "type": "string" }, "default": [] },
          "maxToolResultChars": { "type": "number", "default": 12000 }
        },
        "default": {}
      },
      "afterAction": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "writeMemoryFile": { "type": "string", "default": "memory/AFTER_ACTION.md" },
          "maxBullets": { "type": "number", "default": 8 }
        },
        "default": {}
      }
    },
    "required": ["enabled"]
  }
}
