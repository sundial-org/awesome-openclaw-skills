{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "judge_input.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["task_spec", "plans", "rubric"],
  "properties": {
    "task_spec": { "$ref": "task_spec.schema.json" },
    "plans": {
      "type": "array",
      "minItems": 1,
      "maxItems": 3,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "plan"],
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "plan": { "$ref": "council_plan.schema.json" }
        }
      }
    },
    "rubric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["criteria"],
      "properties": {
        "criteria": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "weight"],
            "properties": {
              "name": { "type": "string", "minLength": 1 },
              "weight": { "type": "number", "minimum": 0, "maximum": 1 }
            }
          }
        },
        "notes": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}
