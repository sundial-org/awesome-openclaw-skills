{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "judge_output.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "scores",
    "comparative_analysis",
    "missing_steps",
    "contradictions",
    "improvements",
    "selected_plan",
    "merged_plan"
  ],
  "properties": {
    "scores": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["label", "score", "rationale", "strengths", "weaknesses"],
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "score": { "type": "number", "minimum": 0, "maximum": 10 },
          "rationale": { "type": "string", "minLength": 1 },
          "strengths": { "type": "array", "items": { "type": "string" } },
          "weaknesses": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "comparative_analysis": { "type": "string", "minLength": 1 },
    "missing_steps": { "type": "array", "items": { "type": "string" } },
    "contradictions": { "type": "array", "items": { "type": "string" } },
    "improvements": { "type": "array", "items": { "type": "string" } },
    "selected_plan": { "type": "string", "minLength": 1 },
    "merged_plan": { "$ref": "#/$defs/plan_body" }
  },
  "$defs": {
    "plan_body": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "overview",
        "phases",
        "testing",
        "risks",
        "rollback",
        "edge_cases"
      ],
      "properties": {
        "overview": { "type": "string", "minLength": 1 },
        "phases": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/phase" }
        },
        "testing": { "type": "array", "items": { "type": "string" } },
        "risks": { "type": "array", "items": { "type": "string" } },
        "rollback": { "type": "array", "items": { "type": "string" } },
        "edge_cases": { "type": "array", "items": { "type": "string" } },
        "open_questions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "phase": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "goal", "tasks"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "goal": { "type": "string", "minLength": 1 },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/task" }
        }
      }
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "description",
        "steps",
        "inputs",
        "outputs",
        "dependencies",
        "complexity",
        "acceptance_criteria"
      ],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "steps": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "dependencies": { "type": "array", "items": { "type": "string" } },
        "complexity": { "type": "integer", "minimum": 1, "maximum": 10 },
        "acceptance_criteria": { "type": "array", "items": { "type": "string" } },
        "locations": { "type": "array", "items": { "type": "string" } },
        "estimated_tokens": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
