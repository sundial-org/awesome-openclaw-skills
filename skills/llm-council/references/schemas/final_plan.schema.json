{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "final_plan.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["final_plan", "metadata"],
  "properties": {
    "final_plan": { "$ref": "#/$defs/plan_body" },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["used_plans", "validation", "warnings"],
      "properties": {
        "used_plans": { "type": "array", "items": { "type": "string" } },
        "validation": {
          "type": "object",
          "additionalProperties": false,
          "required": ["task_spec_valid", "plans_valid", "judge_valid"],
          "properties": {
            "task_spec_valid": { "type": "boolean" },
            "plans_valid": {
              "type": "object",
              "additionalProperties": { "type": "boolean" }
            },
            "judge_valid": { "type": "boolean" }
          }
        },
        "warnings": { "type": "array", "items": { "type": "string" } }
      }
    }
  },
  "$defs": {
    "plan_body": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "overview",
        "phases",
        "testing",
        "risks",
        "rollback",
        "edge_cases"
      ],
      "properties": {
        "overview": { "type": "string", "minLength": 1 },
        "phases": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/phase" }
        },
        "testing": { "type": "array", "items": { "type": "string" } },
        "risks": { "type": "array", "items": { "type": "string" } },
        "rollback": { "type": "array", "items": { "type": "string" } },
        "edge_cases": { "type": "array", "items": { "type": "string" } },
        "open_questions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "phase": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "goal", "tasks"],
      "properties": {
        "name": { "type": "string", "minLength": 1 },
        "goal": { "type": "string", "minLength": 1 },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/task" }
        }
      }
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title",
        "description",
        "steps",
        "inputs",
        "outputs",
        "dependencies",
        "complexity",
        "acceptance_criteria"
      ],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "description": { "type": "string", "minLength": 1 },
        "steps": { "type": "array", "minItems": 1, "items": { "type": "string" } },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "outputs": { "type": "array", "items": { "type": "string" } },
        "dependencies": { "type": "array", "items": { "type": "string" } },
        "complexity": { "type": "integer", "minimum": 1, "maximum": 10 },
        "acceptance_criteria": { "type": "array", "items": { "type": "string" } },
        "locations": { "type": "array", "items": { "type": "string" } },
        "estimated_tokens": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
